<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Database</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />

    <style>
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }

      .container {
        width: 80%;
      }

      .heading {
        text-align: center;
        margin-bottom: 20px;
      }

      .table-container {
        overflow-x: auto;
        max-height: 300px;
      }

      table {
        width: 100%;
        border-collapse: collapse;
      }

      th,
      td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }

      .fixed-header {
        position: sticky;
        top: 0;
        z-index: 1;
        background-color: #ddd;
      }

      .fixed-header th {
        position: sticky;
        top: 0;
        background-color: #8346f5;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h2 class="heading">Shortened URLs</h2>
      <div class="table-container">
        <table>
          <thead class="fixed-header">
            <tr>
              <th>Original URL</th>
              <th>Shortened URL</th>
              <th>Notes</th>
              <th>Clicks</th>
            </tr>
          </thead>
          <tbody>
            <% urls.forEach((url) => { %>
            <tr>
              <td><%= url.originalURL %></td>
              <td><a href="<%= url.shortURL %>" target="_blank"><%= url.shortURL %></a></td>
              <td><%= url.notes %></td>
              <td><%= url.clicks %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <div class="mt-3">
        <a href="/" class="btn btn-primary">Home</a>
        <!-- Add Home button -->
      </div>
    </div>
  </body>
</html>
